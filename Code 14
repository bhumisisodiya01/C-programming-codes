// WAP to check BMI index of a person and print the BMI value as per the following range
Starvation: less than 15
Anorexic: 15.1 to 17.5
Underweight: 17.6 to 18.5
Ideal: 18.6 to 24.9
Overweight: 25 to 25.9
Obese: 30 to 39.9
Morbidity Obese: 40.0 and above
#include <stdio.h>
int main()
{
    float w, h , x;
    printf ("Enter the weight (in kg) \n");
    scanf ("%f", &w);
    printf ("Enter the height (in m)\n");
    scanf ("%f", &h);
    x=(w/(h*h));
    printf("BMI Index = %f\n", x);
    if (x<=15) {
        printf("Starvation");
            }
    else if (x>15 && x<=17.5) {
        printf("Anorexic");
            }
    else if (x>17.5 && x<=18.5) {
        printf("Underweight");
            }
    else if (x>18.5 && x<=24.9) {
        printf("Ideal");
            }
    else if (x>24.9 && x<=30) {
        printf("Overweight");
            }
    else if (x>30 && x<=39.9) {
        printf("Obese");
            }
    else {
        printf("Morbidity Obese");
    }
    return 0;
}
