// Write a program to find simple interest
#include <stdio.h>
int main()
{
    int P, R ,T, Amount, x;
    printf ("Enter the value of P \n");
    scanf ("%d", &P);
    printf ("Enter the value of R\n");
    scanf ("%d", &R);
    printf ("Enter the value of T \n");
    scanf ("%d", &T);
    x=(P*R*T)/100;
    printf("Amount=%d",x);
    return 0;
}
