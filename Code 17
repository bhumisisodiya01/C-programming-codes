// Write a program to enter numbers till the user wants. At the end it should display the count of positive, negative and zeros entered.
#include <stdio.h>
int main() {
    int v, n, p=0, neg=0, zer=0;
    while (1)
    {
        printf("Do you want to enter a number, please enter 1 for yes and 0 for no:\n");
        scanf("%d",&v);
        if(v==1)
        {
        printf("Please enter the number:\n");
        scanf("%d", &n);
        if(n>0)
          {
            p=p+1;
          }
        else if (n<0)
          {
            neg=neg+1;
          }
        else
            zer=zer+1;
        }
       else if (v==0)
       {
           break;
       }   
       else 
       printf("You have entered a wrong choice");
    }
    printf("Positive=%d\nNegative=%d\nZeros=%d", p, neg, zer);
    return 0;
}
